# Hotel Voice AI Concierge Environment Configuration
# Copy this file to .env and fill in your actual API keys and configuration

# Database Configuration
DATABASE_URL="file:./database.db"

# API Keys for Voice Services
SONIOX_API_KEY=your_soniox_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here  
CARTESIA_API_KEY=your_cartesia_api_key_here

# Fallback API Keys
DEEPGRAM_API_KEY=your_deepgram_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Daily.co Configuration for Voice Transport
DAILY_API_KEY=your_daily_api_key_here
DAILY_ROOM_URL=https://your-domain.daily.co/room-name

# Guest Context (can be set dynamically)
GUEST_ROOM_NUMBER=

# Application Settings
APP_NAME=Hotel Voice AI Concierge
APP_VERSION=1.0.0
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_here_change_in_production

# CORS Settings (for production, specify actual origins)
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Voice Pipeline Settings
VOICE_TIMEOUT=120
MAX_CONVERSATION_DURATION=600
INTERRUPTION_ENABLED=true

# Menu and Order Settings
MAX_ORDER_ITEMS=20
DEFAULT_PREPARATION_TIME=25
DELIVERY_TIME_BUFFER=10

# Hotel Information
HOTEL_NAME=Grand Plaza Hotel
HOTEL_PHONE=+1-555-0123
ROOM_SERVICE_HOURS=24/7