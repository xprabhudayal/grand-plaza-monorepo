# Hotel Voice AI Concierge - Environment Variables

# Voice Services
# Either SONIOX_API_KEY or DEEPGRAM_API_KEY is required for speech-to-text
SONIOX_API_KEY=
DEEPGRAM_API_KEY=your_deepgram_api_key

# CARTESIA_API_KEY is required for text-to-speech
CARTESIA_API_KEY=your_cartesia_api_key

# Either OPENAI_API_KEY or PERPLEXITY_API_KEY is required for language model
OPENAI_API_KEY=your_openai_api_key
PERPLEXITY_API_KEY=your_perplexity_api_key

# Alternative LLM services (optional)
GROQ_API_KEY=
TAVUS_API_KEY=
TAVUS_REPLICA_ID=
TAVUS_PERSONA_ID=

# Daily.co Transport (required for voice calls)
DAILY_API_KEY=your_daily_api_key
DAILY_ROOM_URL=your_daily_room_url

# Voice settings
VOICE_TIMEOUT=120
MAX_CONVERSATION_DURATION=600
INTERRUPTION_ENABLED=true

# API settings
API_BASE_URL=http://localhost:80

# Database
DATABASE_URL=file:./database.db

# Application settings
APP_NAME=Hotel Voice AI Concierge
APP_VERSION=1.0.0
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=change-me-in-production
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text

# Hotel configuration
HOTEL_NAME=Grand Plaza Hotel
HOTEL_PHONE=+1-555-0123
ROOM_SERVICE_HOURS=24/7
GUEST_ROOM_NUMBER=

# Order settings
MAX_ORDER_ITEMS=20
DEFAULT_PREPARATION_TIME=25
DELIVERY_TIME_BUFFER=10